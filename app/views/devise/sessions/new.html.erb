<%= image_tag 'icons/icon-close-black.png', class: 'modal-close', data: { dismiss: 'modal' } %>

<h2 class="modal-title">Connexion</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { remote: true }, html: { class: 'main-form main-form-modal' }) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Adresse e-mail' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Mot de passe' %>
  </div>

  <div class="actions">
    <%= f.submit "Connexion" %>
    <%= link_to "J'ai oublié mon mot de passe", new_password_path(resource_name), class: 'forgot-password' %>
  </div>
<% end %>

<div class="modal-footer">
  <p>
    Vous avez déjà un compte ?
    <%= link_to "Inscrivez-vous", new_registration_path(resource_name) %>
  </p>
</div>
