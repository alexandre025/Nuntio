<% unless request.xhr? %>
  <%- content_for :header_nav_bar do -%>
    <%= render partial: 'shared/header_nav_bar', locals: { current: nil } %>
  <%- end -%>
  <div class="modal-alternative">
<% else %>
  <%= image_tag 'icons/icon-close-black.png', class: 'modal-close', data: { dismiss: 'modal' } %>
<% end %>

  <h2 class="modal-title">Connexion</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { remote: request.xhr? }, html: { class: 'main-form main-form-modal' }) do |f| %>
    <div class="field">
      <%= f.input :email, label: false, placeholder: 'Adresse e-mail' %>
    </div>

    <div class="field">
      <%= f.input :password, autocomplete: "off", label: false, placeholder: 'Mot de passe' %>
    </div>

    <div class="actions">
      <%= f.submit "Connexion" %>
      <%= link_to "J'ai oublié mon mot de passe", new_password_path(resource_name), class: 'forgot-password' %>
    </div>
  <% end %>

  <div class="modal-footer">
    <p>
      Vous avez déjà un compte ?
      <%= link_to "Inscrivez-vous", new_registration_path(resource_name) %>
    </p>
  </div>

<% unless request.xhr? %>
  </div>
<% end %>
