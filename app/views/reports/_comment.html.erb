<% if defined? comment %>
<li>
  <div class="comments-container__list--header">
    <div class="profile"></div>
    <p class="name"><%= comment.user.fullname %></p>
    <p class="date">Il y a <%= time_ago_in_words(comment.created_at) %></p>
  </div>
  <p class="comments-container__list--text">
    <%== comment.content %>
  </p>
</li>
<% end %>
