<div class="tower-show__header">
  <div class="tower-show__header--content">
    <h2 class="title"><%= @tower.title %></h2>
    <p class="description">Pour vous aider à comprendre les leviers SEO les plus pertinents pour votre ecosystème</p>
    <div class="rating">
      <div class="rating-stars" data-rating="3.2"></div>
      <p>342 avis</p>
      <p class="followers">52 abonnés</p>
    </div>
    <p class="details">Par Ludovic Delabre &nbsp; | &nbsp; Responsable aquisition à Numa Paris</p>
  </div>
</div>

<div class="tower-show__content">
  <div class="tower-show__content--container">
    <div class="tower-show__content--main">
      <ul class="nav-tabs">
        <li class="active"><a href="#">Présentation</a></li>
        <li><a href="#">Auteur et contributions</a></li>
        <li><a href="#">Commentaires</a></li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane tab-pane__product active">
          <%= render partial: 'towers/tabs/product', locals: {} %>
        </div>

        <div class="tab-pane tab-pane__author">
          <%= render partial: 'towers/tabs/author', locals: {} %>
        </div>

        <div class="tab-pane tab-pane__comment">
          <%= render partial: 'towers/tabs/comment', locals: {} %>
        </div>
      </div>
    </div>

    <div class="tower-show__content--side">

      <div class="side-body">
        <div class="side-header">
          <p class="price">8,90€</p>
          <p class="month">par mois</p>
        </div>
        <div class="side-info">
          <p>Cela comprend :</p>
          <ul>
            <li class="time"><div class="info-icon"></div> 5 à 8 minutes de lecture</li>
            <li class="level"><div class="info-icon"></div> Pour tous niveau</li>
            <li class="frequency"><div class="info-icon"></div> Format hebdomadaire</li>
          </ul>
          <a href="#">Je m'abonne</a>
        </div>
      </div>
      <div class="side-rating">
        <div class="rating-stars" data-rating="3.2"></div>
        <p>85% d'avis positifs</p>
      </div>

    </div>
  </div>

</div>

<div class="tower-show__others">
  <div class="tower-list">
    <h2 class="tower-list__title">Recommandés pour vous</h2>

    <div class="tower-list__slider">
      <% 10.times do |s| %>
        <%= render partial: 'towers/tower_card', locals: {} %>
      <% end %>
    </div>

    <div class="customSliderLink-recommended tower-list__slider-arrow arrow-prev" data-target="prev"></div>
    <div class="customSliderLink-recommended tower-list__slider-arrow arrow-next" data-target="next"></div>
  </div>
</div>
