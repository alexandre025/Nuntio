<div class="tower-container">

  <div class="tower-list-full">

    <div class="tower-list-full__header">
      <div class="tower-list-full__header--left">
        <h2 class="list-title">Toutes les offres de <%= @category.name %></h2>
      </div>
      <div class="tower-list-full__header--right">

      </div>
    </div>

    <div class="tower-list-full__filters list-filters">
      <%#= search_form_for @q, url: theme_towers_path(all: true), data: { remote: true } do |f| %>
        <%#= f.select :activity_schedule_season_id_eq, Lump::Season.order('date_begin ASC').map { |s| [s.label, s.id] }, { include_blank: 'Fourchette de prix' }, {onchange: 'this.form.submit();'} %>
      <%# end %>
      <form action="">
        <div class="list-filters__left">
          <select name="" id="">
            <option value="" disabled selected>Fourchette de prix</option>
            <option value="">Lorem</option>
            <option value="">Ipsum</option>
          </select>
          <select name="" id="">
            <option value="" disabled selected>Niveau</option>
            <option value="">Lorem</option>
            <option value="">Ipsum</option>
          </select>
          <select name="" id="">
            <option value="" disabled selected>Fréquence</option>
            <option value="">Lorem</option>
            <option value="">Ipsum</option>
          </select>
        </div>
        <div class="list-filters__right">
          <p>Trier par :</p>
          <select name="" id="">
            <option value="" disabled selected>Popularité</option>
            <option value="">Lorem</option>
            <option value="">Ipsum</option>
          </select>
        </div>
      </form>
    </div>

    <div class="tower-list-full__cards">
      <%- @towers.each do |tower| -%>
        <%= render partial: 'towers/tower_card', locals: { tower: tower } %>
      <%- end -%>
    </div>
  </div>

</div>
