<div class="tower-container">

  <div class="tower-list-full">
    <div class="tower-list-full__filters">
      <%#= search_form_for @q, url: theme_towers_path(all: true), data: { remote: true } do |f| %>
        <%#= f.select :activity_schedule_season_id_eq, Lump::Season.order('date_begin ASC').map { |s| [s.label, s.id] }, { include_blank: 'Fourchette de prix' }, {onchange: 'this.form.submit();'} %>
      <%# end %>
    </div>

    <div class="tower-list-full__header">
      <div class="tower-list-full__header--left">
        <h2 class="list-title">Toutes les offres de <%= @category.name %></h2>
      </div>
      <div class="tower-list-full__header--right">

      </div>
    </div>

    <div class="tower-list-full__cards">
      <% 10.times do |s| %>
        <div class="tower-card">
          <%= render partial: 'towers/tower_card', locals: {} %>
        </div>
      <% end %>
    </div>
  </div>

</div>
