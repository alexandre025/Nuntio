<%- content_for :header_nav_bar do -%>
  <%= render partial: 'shared/header_nav_bar', locals: { current: :towers } %>
<%- end -%>

<%- content_for :header_sub_nav_bar do -%>
  <%= render partial: 'shared/header_sub_nav_bar', locals: { current_sub: :towers_index } %>
<%- end -%>

<div class="tower-container">

  <div class="tower-list">
    <h2 class="tower-list__title">Recommandés pour vous</h2>

    <div class="tower-list__slider">
      <%- @recommended_towers.each do |tower| -%>
        <%= render partial: 'towers/tower_card', locals: { tower: tower } %>
      <%- end -%>
    </div>

    <div class="customSliderLink-recommended tower-list__slider-arrow arrow-prev" data-target="prev"></div>
    <div class="customSliderLink-recommended tower-list__slider-arrow arrow-next" data-target="next"></div>
  </div>

  <div class="tower-list">
    <h2 class="tower-list__title">Les dernières nouveautés</h2>

    <div class="tower-list__slider">
      <%- @newest_towers.each do |tower| -%>
        <%= render partial: 'towers/tower_card', locals: { tower: tower } %>
      <%- end -%>
    </div>

    <div class="customSliderLink-new tower-list__slider-arrow arrow-prev" data-target="prev"></div>
    <div class="customSliderLink-new tower-list__slider-arrow arrow-next" data-target="next"></div>
  </div>

  <div class="tower-list">
    <h2 class="tower-list__title">Les plus populaires du moment</h2>

    <div class="tower-list__slider">
      <%- @popular_towers.each do |tower| -%>
        <%= render partial: 'towers/tower_card', locals: { tower: tower } %>
      <%- end -%>
    </div>

    <div class="customSliderLink-popular tower-list__slider-arrow arrow-prev" data-target="prev"></div>
    <div class="customSliderLink-popular tower-list__slider-arrow arrow-next" data-target="next"></div>
  </div>

</div>
