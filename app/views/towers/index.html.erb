<div class="tower-container">

  <% 3.times do |i| %>
    <div class="tower-list">
      <h2 class="tower-list__title">Les plus populaires du moment</h2>

      <div class="tower-list__slider">
        <% 10.times do |s| %>
          <%= render partial: 'towers/tower_card', locals: {} %>
        <% end %>
      </div>

      <div class="customSliderLink-<%= i %> tower-list__slider-arrow arrow-prev" data-target="prev"></div>
      <div class="customSliderLink-<%= i %> tower-list__slider-arrow arrow-next" data-target="next"></div>
    </div>
  <% end %>

</div>
